<body>

    <p class="h4"> Add A New Teacher to Our Database</p>
    <div class="spacer"></div>
    <form action="/add_teacher" method="post">

        <div class="container">
            <div class="row">
                <div class="col-2">

                </div>
                <div class="col-8">
                    <ul class="list-group">
                        {{#each teachers}}
                        <li class="list-group-item"><a href="/teacher_taught/{{id}}">{{first_name}} {{last_name}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="col-2">

                </div>
            </div>
        </div>
        <div class="spacer"></div>
        <div class="container">
            <div class="row">
                <div class="col-2"></div>

                <div class="col-8">
                    <div class="whiten">
                        <input name="fname" type="text" placeholder="First Name" autocapitalize="words" required>
                        <span>First Name</span>
                    </div>

                    <div class="whiten">
                        <input autocapitalize="words" name="lname" name="lname" type="text" placeholder="Last Name" aria-label="last Name"
                            required>
                        <span>Last Name</span>
                    </div>
                    <div class="whiten">
                        <input name="email" type="text" placeholder="Email" aria-label="email" required>
                        <span>Email</span>

                    </div>
                    <div class="spacer"></div>
                    <input type="submit" value="submit">

                </div>
                <div class="col-2">

                </div>
            </div>
        </div>




    </form>




</body>