<div class="spacer"></div>

<p class="h4">The teachers with multiple subjects</p>
<div class="spacer"></div>
<table class="table table-striped table-dark">
    <tr>
        <th scope="col">First Name & Last Name </th>
        <th scope="col">
            Subject Count
        </th>
        <th scope="col">Subjetcs for teacher</th>
    </tr>


    {{#each multi_subs}}
    <tr>

        <td>
            <a href="/teacher_taught/{{id}}">
            {{first_name}} {{last_name}}
            </a>

        </td>

        <td>{{subject_count}}</td>

        <td>
            {{#each subs_by_name}}

            <ul class="list-group">
                <a href="/subject_taught/{{name}}/">
                    <li class="list-group-item-secondary list-group-item-action">{{name}}</li>
                </a>
            </ul>

            {{/each}}
        </td>


    </tr>

    {{/each}}
</table>