<div class="spacer"></div>

<p class="h4">The teachers with multiple subjects</p>
    <div class="row">
    <div class="col-12">
        <hr>
    </div>
</div>
<div class="spacer"></div>
<div class="row">

    <div class="col-4">
        <form action="/link" method="post">
            <select class="form-select" aria-label=".form-select-sm example" name="select_subject" id="">
                <option value="" selected>
                    <p>--Select Subject--</p>
                </option>
                {{#each subs}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <div class="spacer"></div>
            <select class="form-select" aria-label=".form-select-sm example" name="select_teacher" id="">
                <option value="">
                    <p>--Select teacher--</p>
                </option>
                {{#each teachers}}
                <option value="{{id}}"> <p class="h6">{{first_name}} {{last_name}}</p> </option>
                {{/each}}
            </select>
            <div class="spacer"></div>
            <input class="btn btn-primary" type="submit" value="Assign">
        </form>
    </div>



<div class="col-1"></div>
    <div class="col-7">
        <table class="table table-light">
            <tr>
                <th scope="col">First Name & Last Name </th>
                <th scope="col">
                    Subject Count
                </th>
                <th scope="col">Subjetcs for teacher</th>
            </tr>


            {{#each multi_subs}}
            <tr>

                <td>
                    <a href="/teacher_taught/{{id}}">
                        {{first_name}} {{last_name}}
                    </a>

                </td>

                <td> <p><span class="badge label-info">{{subject_count}}</p></span> </td>

                <td>
                    {{#each subs_by_name}}

                    <ul class="list-group">
                        <a href="/subject_taught/{{name}}/">
                            <li class="list-group-item">{{name}}</li>
                        </a>
                    </ul>

                    {{/each}}
                </td>


            </tr>

            {{/each}}
        </table>
    </div>
</div>


